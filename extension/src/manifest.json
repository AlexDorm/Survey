{
	"manifest_version": 2,

	"name": "Survey Extension",
	"description": "This extension shows a survey that you have to answer daily",
	"version": "1.0",
	"options_page": "options.html",
	"background": {
		"scripts": ["bg.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Click to participate"
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"notifications"
	]
}